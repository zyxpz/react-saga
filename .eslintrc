{
  "extends": ["mido", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "no-unused-vars": 1,
    "require-yield": 0
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "settings": {
    "import/ignore": [
      "node_modules"
    ],
    "react": {
      "pragma": "React",
      "version": "16.7.0"
    }
  }
}